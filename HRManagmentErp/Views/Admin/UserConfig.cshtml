@model HRMDal.Models.NewUser

@{
    ViewBag.Title = "UserConfig";
}

<section>
    <div class="container py-5 mb-4 " >
        <div class="row">
            <div class="col-lg-4 mt-2">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Html.DisplayFor(model => model.UserName)</h5>
                        <p class="message"> @Html.ActionLink("BACK", "Index", "Admin", null, new { @class = "btn btn-success" })</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4 ">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.Email)</p>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.MobileNo)</p>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.EmpAddress)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Status</p>
                            </div>
                            <div class="col-sm-9">
                                @using (Html.BeginForm())
                                {
                                    @Html.HiddenFor(model => model.UserName)
                                    <div class="d-flex align-items-center">
                                        @Html.DropDownListFor(
                                            model => model.IsApproved,
                                            new SelectList(
                                                new List<Object>{
                                                    new { value = true , text = "Approved"  },
                                                    new { value = false, text = "Unapproved"}
                                                },
                                                "value",
                                                "text",
                                                Model
                                            ),
                                            new { @class = "form-control", @onchange = "submitForm()" }
                                        )
                                        <button class="btn btn-lg btn-success m-2" type="submit">Update</button>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>