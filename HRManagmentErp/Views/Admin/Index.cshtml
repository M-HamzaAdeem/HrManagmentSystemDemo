@model HRManagmentErp.Models.AdminViewModel

@{
    ViewBag.Title = "Admin";
}


<section style="margin-left: 5%; width: 90%;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Html.DisplayFor(model => model.AdminEmployee.UserName)</h5>
                        <p class="text-muted mb-1">@Html.DisplayFor(model => model.AdminEmployee.DesiginationName)</p>
                        <p class="text-muted mb-2">@Html.DisplayFor(model => model.AdminEmployee.DepartmentName)</p>
                        <p class="message"> @Html.ActionLink("LOGOUT", "LogOut", "User", null, new { @class = "btn btn-success" })</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4 mt-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.AdminEmployee.FirstName)<span> </span> @Html.DisplayFor(model => model.AdminEmployee.LastName)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.AdminEmployee.Email)</p>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.AdminEmployee.MobileNo)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Reporting Officer</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.AdminEmployee.RoName)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.AdminEmployee.EmpAddress)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Country</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Html.DisplayFor(model => model.AdminEmployee.CountryName)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


    <table class="table table-striped" style="margin-left: 5%; width: 90%;">
        <thead class="table-success">
            <tr>

                <th scope="col">Full Name</th>
                <th scope="col">User Name</th>
                <th scope="col">Details</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null) {
                foreach (var user in Model.ApprovedUsers)
                {


                    <tr>
                        <td>
                            @user.FirstName
                            <span>
                            </span>
                            @user.LastName
                        </td>
                        <td> @user.UserName</td>
                        <td>
                            @using (Html.BeginForm("EmployeeConfig", "Admin", FormMethod.Post, new { @class = "form-inline" }))
                            {
                                @Html.Hidden("employeeDetails.UserName", user.UserName)
                                <button type="submit" class="btn btn-success">OPEN</button>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>


    <br />
    <br />
    <br />

    <table class="table table-striped" style="margin-left: 5%; width: 90%;">
        <thead class="table-danger">
            <tr>

                <th scope="col">Full Name</th>
                <th scope="col">User Name</th>
                <th scope="col">Details</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var user in Model.UnApprovedUsers)
                {


                    <tr>
                        <td>
                            @user.FirstName
                            <span>
                            </span>
                            @user.LastName
                        </td>
                        <td> @user.UserName</td>

                        <td>
                            @using (Html.BeginForm("UserConfig", "Admin", FormMethod.Post, new { @class = "form-inline" }))
                            {
                                @Html.Hidden("currentUser.UserName", user.UserName)
                                <button type="submit" class="btn btn-success">OPEN</button>
                            }
                        </td>

                    </tr>
                }
            }
            </tbody>
    </table>


<p style="margin-bottom:6%">

</p>
