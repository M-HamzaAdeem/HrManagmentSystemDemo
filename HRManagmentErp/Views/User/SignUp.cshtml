@model HRManagmentErp.Models.UserDetails
<link rel="stylesheet" type="text/css" href="~/Content/login-styles.css">
@{
    ViewBag.Title = "SignUp";
}


<div class="login-page">
    <div class="form">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "First Name" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "Last Name" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "UserName" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control", placeholder = "Pasword" })
                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control", placeholder = "Mobile Number" })
                @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })

                @Html.TextBoxFor(model => model.EmpAddress, new { @class = "form-control", placeholder = "Address" })
                @Html.ValidationMessageFor(model => model.EmpAddress, "", new { @class = "text-danger" })

                <button type="submit">REGISTER</button>
                <p class="text-danger">
                    @ViewBag.Message
                </p>
        }
        <p class="message">Already registered? @Html.ActionLink("Login to your account", "index", "User")</p>
    </div>
</div> 

